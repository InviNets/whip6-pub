include ../../../cortex-m3/Makefile.common

PLATFORM_CC26XX_BOOTLOADER_DIO ?= -1
PLATFORM_CC26XX_BOOTLOADER_DIO_LEVEL ?= 0

OBJS := startup.o ccfg.o appversion.o
CFLAGS += -I../cc26xxware -I../cc26xxware/driverlib \
		  -DPLATFORM_CC26XX_BOOTLOADER_DIO=$(PLATFORM_CC26XX_BOOTLOADER_DIO) \
		  -DPLATFORM_CC26XX_BOOTLOADER_DIO_LEVEL=$(PLATFORM_CC26XX_BOOTLOADER_DIO_LEVEL)

all: $(OBJS)

.PHONY: force
$(OBJS): force
